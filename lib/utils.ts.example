// lib/utils.ts
// Utilidades comunes (requerido por shadcn/ui)

import { type ClassValue, clsx } from 'clsx'
import { twMerge } from 'tailwind-merge'

export function cn(...inputs: ClassValue[]) {
  return twMerge(clsx(inputs))
}

// Formatear fechas
export function formatDate(date: Date | string): string {
  const d = typeof date === 'string' ? new Date(date) : date
  return d.toLocaleDateString('es-ES', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  })
}

// Calcular 1RM (One Rep Max)
export function calculate1RM(weight: number, reps: number): number {
  // FÃ³rmula de Epley
  return weight * (1 + reps / 30)
}

// Calcular peso de trabajo basado en porcentaje del 1RM
export function calculateWorkingWeight(oneRM: number, percentage: number): number {
  return Math.round((oneRM * percentage) / 2.5) * 2.5 // Redondear a placas de 2.5kg
}

// Validar email
export function isValidEmail(email: string): boolean {
  const regex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/
  return regex.test(email)
}
