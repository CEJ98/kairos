# ===================================
# KAIROS FITNESS - ENVIRONMENT VARIABLES
# ===================================
# Copy this file to .env.local and fill in your actual values

# ===================================
# DATABASE CONFIGURATION
# ===================================
# PostgreSQL Database URL
# Format: postgresql://username:password@host:port/database
# Example: postgresql://postgres:password@localhost:5432/kairos_db
DATABASE_URL="postgresql://username:password@host:port/database"

# ===================================
# NEXT.JS CONFIGURATION
# ===================================
# Environment (development, production, test)
NODE_ENV="development"

# Next.js URL configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-here-use-openssl-rand-base64-32"

# ===================================
# AUTHENTICATION CONFIGURATION
# ===================================
# JWT Secret for NextAuth
JWT_SECRET="your-jwt-secret-here-use-openssl-rand-base64-32"

# Google OAuth (optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub OAuth (optional)
GITHUB_ID="your-github-client-id"
GITHUB_SECRET="your-github-client-secret"

# ===================================
# EMAIL CONFIGURATION
# ===================================
# SendGrid API Key (for email notifications)
SENDGRID_API_KEY="your-sendgrid-api-key"
SENDGRID_FROM_EMAIL="noreply@yourdomain.com"

# AWS SES Configuration (alternative to SendGrid)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"

# ===================================
# SMS CONFIGURATION
# ===================================
# Twilio Configuration (for SMS notifications)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# ===================================
# PAYMENT PROCESSING
# ===================================
# Stripe Configuration
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret"

# ===================================
# STORAGE CONFIGURATION
# ===================================
# Cloudinary (for image/video uploads)
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# AWS S3 Configuration (alternative to Cloudinary)
AWS_S3_BUCKET_NAME="your-s3-bucket-name"
AWS_S3_REGION="us-east-1"

# ===================================
# MONITORING & ANALYTICS
# ===================================
# Sentry (Error Tracking)
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# Google Analytics
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXXX"

# PostHog (Product Analytics)
POSTHOG_API_KEY="your-posthog-api-key"
POSTHOG_HOST="https://app.posthog.com"

# ===================================
# RATE LIMITING & SECURITY
# ===================================
# Redis Configuration (for rate limiting)
REDIS_URL="redis://localhost:6379"

# CORS Origins (comma-separated)
ALLOWED_ORIGINS="http://localhost:3000,https://yourdomain.com"

# Security Configuration
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="900000"

# ===================================
# FEATURE FLAGS
# ===================================
# Enable/disable features
ENABLE_ANALYTICS="true"
ENABLE_NOTIFICATIONS="true"
ENABLE_PAYMENTS="true"
ENABLE_FILE_UPLOADS="true"
ENABLE_SOCIAL_LOGIN="true"

# ===================================
# DEVELOPMENT ONLY
# ===================================
# Database seeding
SEED_DATABASE="false"

# Debug logging
DEBUG_MODE="false"

# Skip email verification in development
SKIP_EMAIL_VERIFICATION="false"

# ===================================
# PRODUCTION ONLY
# ===================================
# SSL/HTTPS Configuration
FORCE_HTTPS="true"

# Domain verification
DOMAIN="yourdomain.com"

# CDN Configuration
CDN_URL="https://cdn.yourdomain.com"

# ===================================
# BACKUP & MAINTENANCE
# ===================================
# Database backup configuration
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS="30"

# Maintenance mode
MAINTENANCE_MODE="false"
MAINTENANCE_MESSAGE="We're performing scheduled maintenance. Please try again later."